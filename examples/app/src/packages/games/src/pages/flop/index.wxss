page {
  height: 100vh;
  background-color: #2f4274;
}

.layout {
  width: 100%;
  height: 100vh;
  background-color: #2f4274;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
}

.card {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 48%;
  height: 160rpx;
  border-radius: 16rpx;
  background-color: #1890ff;
  font-weight: bold;
  color: #fff;
}

.content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 30rpx;
  box-sizing: border-box;
}

.content .item {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 1%;
  width: 24%;
  height: 230rpx;
  font-weight: 30rpx;
  font-weight: bold;
  color: #fff;
  border-radius: 12rpx;
  background-color: #f27922;
  box-sizing: border-box;
  overflow: hidden;
}

