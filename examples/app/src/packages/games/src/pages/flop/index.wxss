.content .material {
  background-repeat: no-repeat;
  background-size: 120rpx 120rpx;
  background-position: center;
}

.content .back {
  transform: rotateY(180deg);
  transition: transform 400ms;
}

.content .front {
  transform: rotateY(360deg);
  transition: transform 400ms;
}

.content .row1 {
  width: 32.3%;
  height: 220rpx;
}

.content .row2 {
  width: 24%;
  height: 180rpx;
}

.content .row3 {
  width: 19%;
  height: 140rpx;
}

.btn {
  margin-bottom: 30rpx;
}
